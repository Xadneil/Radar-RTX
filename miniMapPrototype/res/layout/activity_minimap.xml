<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textuseremail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/logintext" />

    <EditText
        android:id="@+id/useremail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textuserpass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginpass" />

    <EditText
        android:id="@+id/userpass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:inputType="textPassword" />

    <TextView
        android:id="@+id/password_confirm_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/registerbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="onClickRegisterButton"
            android:text="@string/registerbut" />

        <Button
            android:id="@+id/loginbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="onClickConnectButton"
            android:text="@string/loginbut" />

    </RelativeLayout>

</LinearLayout>